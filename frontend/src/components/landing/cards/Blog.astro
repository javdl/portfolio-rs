---
import { Icon } from "astro-icon/components";
import dayjs from "dayjs";
import * as m from "@paraglide/messages.js";
import { languageTag } from "@paraglide/runtime";

interface Props {
    link: string;
    target: string;
    title: string;
    description: string;
    tags: string[];
    views: number;
    date: Date;
    readTime: number;
}

let { target, link, title, description, tags, views, date, readTime }: Props =
    Astro.props;
---

<div
    class="relative flex flex-wrap flex-row items-center h-auto md:h-36 lg:h-32 p-4 border border-gray-300 dark:border-gray-700
    hover:border-gray-400 dark:hover:border-gray-600 duration-200 hover:ease-in
    rounded-md bg-white dark:bg-black shadow-sm hover:shadow-md
    transition-shadow"
>
    <div class="flex-1 flex flex-col gap-2">
        <div class="flex justify-between items-center">
            <a
                href={link}
                rel="noopener"
                target={target}
                class="text-gray-800 dark:text-gray-200 duration-200 hover:text-[#68b5fc] group flex items-center gap-1
                cursor-pointer
                hover:underline hover:decoration-dashed hover:underline-offset-8 hover:decoration-[#68b5fc]"
            >
                <p class="text-md md:text-lg lg:text-xl font-medium">
                    {title}
                </p>
                <Icon name="arrow-right" title="" size="1rem" />
            </a>
            <div
                class="flex items-center gap-2 text-gray-600 dark:text-gray-400"
            >
                <Icon name="timer" title="LinkedIn" size="1rem" />
                <span
                    class="flex md:gap-1 text-sm font-medium text-muted-foreground dark:text-gray-400"
                    >{readTime} {m.readTime()}</span
                >
            </div>
        </div>
        <p class="text-sm text-muted-foreground dark:text-gray-400">
            {description}
        </p>
        <div
            class="flex justify-left items-center mt-2 text-sm text-gray-600 dark:text-gray-400 space-x-4"
        >
            <section
                class="flex items-center justify-center gap-1 flex-wrap font-medium"
            >
                <Icon name="eye" title="LinkedIn" size="1rem" />
                {views ? views : 0}
                {m.views()}
            </section>
            <section
                class="flex items-center justify-center gap-1 flex-wrap font-medium"
                title=""
            >
                <Icon name="tag" title="LinkedIn" size="1rem" />
                {tags?.length ? tags.length : 0}
                {m.tags()}
            </section>
            <section
                class="flex items-center justify-center gap-1 flex-wrap font-medium"
            >
                <Icon name="date" title="LinkedIn" size="1rem" />
                {
                    languageTag() === "zh"
                        ? `${dayjs(date).format("YYYY年MM月")}`
                        : `${dayjs(date).format("MMM YYYY")}`
                }
            </section>
        </div>
    </div>
</div>
